.pageHeader
  display block
  &__title
    height  109px
    width   100%
    display block
    position absolute
    img
      display block
      margin  18px auto 22px
      height  69px
      width   91px
  &__mainNavigation
    display  block
    height   109px
    width    980px
    margin   0 auto
    position relative

.mainNavigation
  &__list
    width           40%
    display         inline-flex
    justify-content space-around
    height          109px
    align-items     center
    &--right
      position absolute
      right    0
    li
      a
        text-decoration none
        text-shadow     shadow
        &:hover
          text-decoration underline
